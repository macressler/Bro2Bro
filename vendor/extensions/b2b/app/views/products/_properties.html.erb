<!-- Product Price -->
<% unless @product_properties.empty? %>
  <% if product_price(@product) %>
    <h4 class="fc-grey1">
      <%= t("price") %>
      <%= product_price(@product) %>
    </h4>
  <% end %>

  <!-- Property product -->
  <div class="clear"></div>
  <p><% for product_property in @product_properties %></p>
    <p class="fs09">
      <%= product_property.property.presentation %> :
      <%= product_property.value %>
    <% end %>
  </p>
<% end %>

